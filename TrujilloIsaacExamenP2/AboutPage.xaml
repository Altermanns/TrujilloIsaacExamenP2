<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrujilloIsaacExamenP2.AboutPage"
             Title="AboutPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Button  x:Name="InfoButton" 
             Text="Isaac"
            Grid.Row="0" Grid.Column="0"
            BackgroundColor="RosyBrown"
             Clicked="InfoButton_Clicked"/>

        <Button x:Name="StackButton" 
            Text="Ismael"
            Grid.Row="0" Grid.Column="1"
                TextColor="Aqua"
            BackgroundColor="DarkRed"/>

        <Button  x:Name="GitHubButton"
             Text="Trujillo"
            Grid.Row="1" Grid.Column="0" 
            BackgroundColor="Violet"
             Clicked="GitHubButton_Clicked"/>

        <Button  x:Name="FavoriteSongButton"
             Text="Velasco"
            Grid.Row="1" Grid.Column="1" 
                 TextColor="White"
            BackgroundColor="Blue"
             Clicked="FavoriteSongButton_Clicked"/>
    </Grid>
</ContentPage>